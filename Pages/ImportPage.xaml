<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="IntuneTools.Pages.ImportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IntuneTools.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid RowDefinitions="Auto,Auto,Auto,*,Auto" Margin="20">
        <!-- Page Title -->
        <TextBlock Text="Import page" 
                   Grid.Row="0"
                   HorizontalAlignment="Center" 
                   FontSize="38" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>
        <!-- Import Button -->
        <Button x:Name="Import" 
                Content="Import" 
                Width="120" 
                HorizontalAlignment="Center" 
                Grid.Row="1"
                Margin="0,0,0,20" 
                Click="ImportButton_Click"/>        <!-- Action Buttons and Search Controls -->
        <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Left" Margin="0,0,0,20">
            <!-- Action Buttons Row -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Button x:Name="Search" 
                        Content="Search" 
                        Width="120" 
                        Margin="0,0,10,0"
                        Click="SearchButton_Click"/>
                <Button x:Name="ListAll" 
                        Content="List all" 
                        Width="120" 
                        Margin="0,0,10,0"
                        Click="ListAllButton_Click"/>
                <Button x:Name="ClearAll" 
                        Content="Clear All" 
                        Width="120" 
                        Margin="0,0,10,0"
                        Click="ClearAllButton_Click"/>
                <Button x:Name="ClearSelected" 
                        Content="Clear Selected" 
                        Width="120" 
                        Click="ClearSelectedButton_Click"/>
            </StackPanel>
            <!-- Search Query TextBox and Options Checkboxes side by side -->
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="SearchQueryTextBox"
                         Width="300"
                         PlaceholderText="Enter search query..."
                         HorizontalAlignment="Left"
                         TextWrapping="NoWrap"
                         Height="30"
                         AcceptsReturn="False"/>
                <Expander Header="Options" IsExpanded="False" Margin="20,0,0,0">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                        <CheckBox x:Name="OptionsAllCheckBox" 
                                  Content="Select all" 
                                  IsThreeState="False" 
                                  Checked="SelectAll_Checked" 
                                  Unchecked="SelectAll_Unchecked" 
                                  Indeterminate="SelectAll_Indeterminate" />
                        <CheckBox x:Name="Option1CheckBox" Content="Settings Catalog" Margin="24,0,0,0" IsThreeState="False" Checked="Option_Checked" Unchecked="Option_Unchecked" />
                        <CheckBox x:Name="Option2CheckBox" Content="Device Compliance" Margin="24,0,0,0" IsThreeState="False" Checked="Option_Checked" Unchecked="Option_Unchecked" />
                        <CheckBox x:Name="Option3CheckBox" Content="Option 3" Margin="24,0,0,0" IsThreeState="False" Checked="Option_Checked" Unchecked="Option_Unchecked" />
                    </StackPanel>
                </Expander>
            </StackPanel>  <!-- end of search row with TextBox and Expander -->

            <!-- Groups and Filters checkboxes -->
            <StackPanel Orientation="Horizontal" Margin="20,5,0,0">
                <CheckBox x:Name="GroupsCheckBox" 
                          Content="Groups" 
                          IsThreeState="False" 
                          Checked="Option_Checked" 
                          Unchecked="Option_Unchecked" 
                          IsChecked="False" />
                <CheckBox x:Name="FiltersCheckBox" 
                          Content="Filters" 
                          Margin="20,0,0,0" 
                          IsThreeState="False" 
                          Checked="Option_Checked" 
                          Unchecked="Option_Unchecked" 
                          IsChecked="False" />
            </StackPanel>
        </StackPanel>

        <!-- Data Grid Area with Loading Overlay -->
        <Grid Grid.Row="3">
            <!-- Data Grid -->
            <controls:DataGrid x:Name="ContentDataGrid" 
                       AutoGenerateColumns="False" 
                       Margin="0,0,0,20"
                       Height="300"
                       CanUserReorderColumns="False"
                       HeadersVisibility="Column"
                       ColumnWidth="Auto"
                       Width="800"
                       HorizontalAlignment="Left">
                <controls:DataGrid.Columns>
                    <controls:DataGridTextColumn Header="Name" Binding="{Binding ContentName}" Width="200"/>
                    <controls:DataGridTextColumn Header="Type" Binding="{Binding ContentType}" Width="200"/>
                    <controls:DataGridTextColumn Header="Platform" Binding="{Binding ContentPlatform}" Width="200"/>
                    <controls:DataGridTextColumn Header="ID" Binding="{Binding ContentId}" Width="200"/>
                </controls:DataGrid.Columns>
            </controls:DataGrid>
            
            <!-- Loading Overlay -->
            <Border x:Name="LoadingOverlay" 
                    Background="{ThemeResource SystemControlAcrylicWindowBrush}"
                    Visibility="Collapsed"
                    Width="600"
                    Height="300"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
                <StackPanel Orientation="Vertical" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center">
                    <ProgressRing x:Name="LoadingProgressRing" 
                                  IsActive="True" 
                                  Width="50" 
                                  Height="50"
                                  Margin="0,0,0,15"/>
                    <TextBlock x:Name="LoadingStatusText" 
                               Text="Loading data from Microsoft Graph..." 
                               HorizontalAlignment="Center"
                               FontSize="14"
                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Info/Status Block -->
        <RichTextBlock Grid.Row="4" Margin="0,10,0,0">
            <Paragraph>Test</Paragraph>
        </RichTextBlock>
    </Grid>
</Page>
