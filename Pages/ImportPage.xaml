<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="IntuneTools.Pages.ImportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IntuneTools.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid RowDefinitions="Auto,Auto,Auto,*,Auto" Margin="20">
        <!-- Page Title -->
        <TextBlock Text="Import Page" 
                   Grid.Row="0"
                   HorizontalAlignment="Center" 
                   FontSize="28" 
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>
        <!-- Import Button -->
        <Button x:Name="Import" 
                Content="Import" 
                Width="120" 
                HorizontalAlignment="Center" 
                Grid.Row="1"
                Margin="0,0,0,20" 
                Click="ImportButton_Click"/>
        <!-- Action Buttons Row -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button x:Name="Search" 
                    Content="Search" 
                    Width="120" 
                    Margin="0,0,10,0"
                    Click="SearchButton_Click"/>
            <Button x:Name="ListAll" 
                    Content="List all" 
                    Width="120" 
                    Margin="0,0,10,0"
                    Click="ListAllButton_Click"/>
            <Button x:Name="ClearAll" 
                    Content="Clear All" 
                    Width="120" 
                    Margin="0,0,10,0"
                    Click="ClearAllButton_Click"/>
            <Button x:Name="ClearSelected" 
                    Content="Clear Selected" 
                    Width="120" 
                    Click="ClearSelectedButton_Click"/>
        </StackPanel>
        <!-- Search Query TextBox (single line, below buttons) -->
        <TextBox x:Name="SearchQueryTextBox"
                 Grid.Row="3"
                 Width="300"
                 Margin="0,0,0,20"
                 PlaceholderText="Enter search query..."
                 HorizontalAlignment="Left"
                 TextWrapping="NoWrap"
                 Height="30"
                 AcceptsReturn="False"/>
        <!-- Data Grid -->
        <controls:DataGrid x:Name="ContentDataGrid" 
                   Grid.Row="4"
                   AutoGenerateColumns="False" 
                   Margin="0,0,0,20"
                   Height="300"
                   CanUserReorderColumns="False"
                   HeadersVisibility="Column"
                   ColumnWidth="Auto"
                   Width="600"
                   HorizontalAlignment="Left">
            <controls:DataGrid.Columns>
                <controls:DataGridTextColumn Header="Name" Binding="{Binding ContentName}" Width="200"/>
                <controls:DataGridTextColumn Header="Type" Binding="{Binding ContentType}" Width="200"/>
                <controls:DataGridTextColumn Header="Platform" Binding="{Binding ContentPlatform}" Width="200"/>
            </controls:DataGrid.Columns>
        </controls:DataGrid>
        <!-- Info/Status Block -->
        <RichTextBlock Grid.Row="5" Margin="0,10,0,0">
            <Paragraph>Test</Paragraph>
        </RichTextBlock>
    </Grid>
</Page>
