<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="IntuneTools.Pages.CleanupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IntuneTools.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- CommandBar -->
            <RowDefinition Height="*"/>
            <!-- Data grid + Side panel -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Intune Cleanup"
                       HorizontalAlignment="Left"
                       FontSize="38"
                       FontWeight="Bold"/>
            <InfoBar x:Name="TenantInfoBar"
                     Severity="Informational"
                     IsClosable="False"
                     IsOpen="False"
                     Margin="0,8,0,0"/>
        </StackPanel>

        <!-- CommandBar -->
        <CommandBar Grid.Row="1"
                    DefaultLabelPosition="Right"
                    Background="Transparent"
                    Margin="0,0,0,12">
            <CommandBar.Content>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBox x:Name="InputTextBox"
                             PlaceholderText="Enter text here..."
                             Width="300"
                             VerticalAlignment="Bottom"/>
                    <AppBarButton x:Name="SearchButton" Icon="Find" Label="Search" Click="Search_Click" ToolTipService.ToolTip="Search for specific items."/>
                    <AppBarButton x:Name="ListAllButton" Icon="ViewAll" Label="List All" Click="ListAll_Click" ToolTipService.ToolTip="List all items."/>
                    <AppBarSeparator/>
                    <AppBarButton x:Name="ClearSelectedButton" Icon="Remove" Label="Clear Selected" Click="ClearSelectedButton_Click" ToolTipService.ToolTip="Remove selected items from staging area."/>
                    <AppBarButton x:Name="ClearAllButton" Icon="Clear" Label="Clear All" Click="ClearAllButton_Click" ToolTipService.ToolTip="Clear all items from staging area."/>
                    <AppBarSeparator/>
                    <AppBarButton x:Name="DeleteButton" Icon="Delete" Label="Delete" Click="DeleteButton_Click" ToolTipService.ToolTip="Permanently delete all staged items." Foreground="Red"/>
                </StackPanel>
            </CommandBar.Content>
            <CommandBar.PrimaryCommands>
                <AppBarButton x:Name="ClearLogButton" Icon="Delete" Label="Clear Log" Click="ClearLogButton_Click" ToolTipService.ToolTip="Clear the log console."/>
            </CommandBar.PrimaryCommands>
        </CommandBar>

        <!-- Main Content Row -->
        <Grid Grid.Row="2" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- DataGrid -->
                <ColumnDefinition Width="340"/>
                <!-- Log panel -->
            </Grid.ColumnDefinitions>

            <!-- DataGrid with InfoBar and loading overlay -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- InfoBar -->
                <InfoBar Grid.Row="0"
                         IsOpen="True"
                         Severity="Warning"
                         Title="Staging Area"
                         Message="This grid acts as a staging area. All items listed below will be permanently deleted. Use the 'Clear' buttons to exclude items you do not wish to delete."
                         IsClosable="True"
                         Margin="0,0,12,12"/>
                
                <!-- DataGrid -->
                <controls:DataGrid Grid.Row="1"
                                   x:Name="CleanupDataGrid" 
                                   AutoGenerateColumns="False"
                                   SelectionMode="Extended"
                                   Margin="0,0,12,0"
                                   IsReadOnly="True"
                                   CanUserSortColumns="True"
                                   CanUserReorderColumns="False"
                                   Sorting="CleanupDataGrid_Sorting">
                    <controls:DataGrid.Columns>
                        <controls:DataGridTextColumn Header="Name" Binding="{Binding ContentName}" Width="2*"/>
                        <controls:DataGridTextColumn Header="Type" Binding="{Binding ContentType}" Width="*"/>
                        <controls:DataGridTextColumn Header="Platform" Binding="{Binding ContentPlatform}" Width="*"/>
                        <controls:DataGridTextColumn Header="ID" Binding="{Binding ContentId}" Width="2*"/>
                    </controls:DataGrid.Columns>
                </controls:DataGrid>

                <!-- Loading Overlay -->
                <Border Grid.RowSpan="2"
                        x:Name="LoadingOverlay"
                        Background="{ThemeResource SystemControlAcrylicWindowBrush}"
                        Visibility="Collapsed"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Spacing="15">
                        <ProgressRing x:Name="LoadingProgressRing"
                                      IsActive="True"
                                      Width="50"
                                      Height="50"/>
                        <TextBlock x:Name="LoadingStatusText"
                                   Text="Loading..."
                                   HorizontalAlignment="Center"
                                   FontSize="14"
                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Log Console Panel -->
            <StackPanel Grid.Column="1"
                        Orientation="Vertical"
                        Margin="0,-20,0,0">
                <TextBlock Text="Log Console"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Margin="0,0,0,12"/>

                <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                              VerticalScrollBarVisibility="Auto"
                              VerticalAlignment="Stretch">
                    <RichTextBlock x:Name="LogConsole"
                                   IsTextSelectionEnabled="True"
                                   TextWrapping="Wrap"/>
                </ScrollViewer>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
